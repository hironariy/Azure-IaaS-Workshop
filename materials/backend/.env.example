# =============================================================================
# Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================================================

# Application
NODE_ENV=development
PORT=3000

# MongoDB Connection
# Local development (Docker Compose replica set)
MONGODB_URI=mongodb://localhost:27017,localhost:27018/blogapp?replicaSet=blogapp-rs0

# Azure production (replace with actual IPs after deployment)
# MONGODB_URI=mongodb://10.0.3.4:27017,10.0.3.5:27017/blogapp?replicaSet=blogapp-rs0

# Microsoft Entra ID (Azure AD) Configuration
ENTRA_TENANT_ID=your-tenant-id
ENTRA_CLIENT_ID=your-client-id

# Azure Key Vault (production only)
# KEY_VAULT_NAME=kv-blogapp-xxxxx

# Logging
LOG_LEVEL=debug

# CORS (comma-separated allowed origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
